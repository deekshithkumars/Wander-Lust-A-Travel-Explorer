<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
  .search-btn{
    background-color:red ;
    color: white;
    border-radius: 25rem;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover{
    background-color:red ;
    color: white;
  }
  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }
  .search-input{
    border-radius: 25rem;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.9rem;
  }
  .tax-info{
    display: none;
  }
  
    
    @media (max-width: 576px) {
            .navbar-nav {
                flex-direction: column;
            }

            .mobile-search {
                display: block;
                width: 50%;
                padding: 0.5rem;
                background-color: #f8f9fa;
            }

            .mobile-search form {
                display: flex;
                flex-direction: column;
            }

            .search-input {
                width: 150%;
                margin-bottom: 0.5rem;
            }

            .search-btn {
                width: 100%;
            }

            .total-taxes {
                display: flex;
                align-items: center; /* Align toggle with text */
                justify-content: flex-start;
                gap: 10px;
                width: 100%;
            }
            
            
        }

        
        
</style>
<body>
    <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/listing"><i class="fa-regular fa-compass"></i></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-link" href="/listing">Explore</a>
              
            </div>
            <div class="navbar-nav ms-auto">
              <form class="d-flex" role="search">
                <input class="form-control me-2 search-input" type="search" placeholder="Search  destination" aria-label="Search">
                <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
              </form>
            </div>
            <div class="navbar-nav ms-auto">
              <!-- if not logged in => display signup and login-->
              <%if(!currUser){%>
              <a class="nav-link" href="/listing/new">Airbnb your home</a>
              <a class="nav-link"  href="/signup"><b>Sign up</b></a>
              <a class="nav-link" href="/login"><b>Log in</b></a>
              <%}%>
              <!-- if logged in => display logout-->
              <%if(currUser){%>
                <a class="nav-link" href="/listing/new">Airbnb your home</a>
                  <div class="nav-link total-taxes" >
                    <div  class="form-check form-switch form-check-reverse ">
                      <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                      <label class="form-check-label" for="flexSwitchCheckReverse">Total after taxes</label>
                    </div>
                  </div>
                  
                
              <a class="nav-link" href="/logout"><b>Log out</b></a>
              <%}%>
            </div>
          </div>
        </div>
      </nav>
</body>
<script>
  let taxSwitch=document.getElementById('flexSwitchCheckReverse');
  taxSwitch.addEventListener('click',()=>{
      let taxInfo=document.getElementsByClassName('tax-info');
      for(info of taxInfo){
          if(info.style.display !="inline"){
              info.style.display="inline"
          }else{
              info.style.display="none"
          }
      }
  })
</script>
</html>