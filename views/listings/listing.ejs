<% layout('/layouts/boilerplate') -%>
<body>
    
    <style>
        

        /* Main filter container with horizontal scrolling */
.filter-container {
    display: flex;
    overflow-x: auto; /* Horizontal scrolling */
    white-space: nowrap; /* Prevent line breaks */
    gap: 20px; /* Space between items */
    padding: 10px 0;
    scrollbar-width: none; /* Hide scrollbar for Firefox */
}

/* Hide scrollbar for Webkit browsers (Chrome, Safari) */
.filter-container::-webkit-scrollbar {
    display: none;
}

/* Individual filter item styling */
.filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 6rem; /* Width of each item */
    margin-right: 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    text-align: center;
    opacity: 0.7;
    font-size: small;
    cursor: pointer;
}

.filter div {
    font-size: 1rem; /* Icon size */
    margin-bottom: 5px;
}

.filter p {
    margin: 0;
    font-size: 0.8rem;
    font-weight: 500;
}

/* Optional: Add some space between icon and text */
.filter i {
    margin-bottom: 5px;
}

/* Adjust layout for smaller screens */
@media (max-width: 768px) {
    .filter-container {
        padding: 10px;
        overflow-x: scroll; /* Enable horizontal scrolling on mobile */
    }
}

.scroll-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
}
       


        .filter{
            margin-right: 1rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            opacity: 0.7;
            font-size: small;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        } 
        
       


/* Scroll indicator styling */
.scroll-indicator {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    background: white;
    padding: 5px;
    border-radius: 50%;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    z-index: 10;
}

/* Chevron icon size */
.scroll-indicator i {
    font-size: 18px;
    color: #555;
}


    </style>
    <div class="scroll-wrapper">
        <div class="filter-container" >
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-galactic-republic"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </div>
        </div>
        <div class="scroll-indicator">
            <i class="fa-solid fa-chevron-right"></i>
        </div>
    </div>
    
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 row-cols-xs-1">
            <% for(listing of allListings){%>
                <a href="/listing/<%=listing._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                        <b><p class="card-text"><%= listing.title %></b><br>
                            &#x20b9;<%=parseFloat(listing.price).toLocaleString("en-IN")%> / night
                            &nbsp;&nbsp;
                            <i class="tax-info">+18% GST</i>
                        </p>
                        </div>
                    </div>
                </a>
            <%}%>
        </div>
        <script>
            // JavaScript to trigger horizontal scroll when clicking the indicator
            const scrollIndicator = document.querySelector('.scroll-indicator');
            const scrollContainer = document.querySelector('.filter-container');
    
            scrollIndicator.addEventListener('click', () => {
                scrollContainer.scrollBy({
                    left: 300,  // Adjust scroll distance as needed
                    behavior: 'smooth'  // Smooth scrolling effect
                });
            });
        </script>
</body>
